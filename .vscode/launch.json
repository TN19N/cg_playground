{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'cg-playground'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cg-playground",
                    "--package=cg-playground"
                ],
                "filter": {
                    "name": "cg-playground",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "stdio": "input.txt"
        },
    ]
}